<h1><%= @post.title %></h1>

<p>
  <%= @post.text %>

</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <i><%= comment.author %> said:</i>
  <p><%= comment.body %></p>
<% end %>

<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>