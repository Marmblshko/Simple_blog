<div class="lg:flex mb-4 border-green-300 border-2">
  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <div class="px-4 py-2 mt-2">
      <h2 class="font-bold text-2xl text-gray-800 tracking-normal"><%= post.title.titleize %></h2>
      <p class="text-sm text-gray-700 px-2 mr-1">
        <%= post.text.truncate(25) %>
      </p>
      <div class="flex items-center justify-between mt-2 mx-6">
        <%= link_to "Show more", post, class: 'text-blue-500 text-xs -ml-3' %>
        <%= link_to post_path(post), class: "flex text-gray-700" do %>
          <svg fill="none" viewBox="0 0 24 24" class="w-6 h-6 text-blue-500" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/>
          </svg>
          <%= post.comments.count %>
        <% end %>
      </div>
      <div class="flex items-center">
        <p class="text-gray-600 text-lg"><%= post.likes.count %> <%= 'Like'.pluralize(post.likes.count) %></p>
      </div>
      <div class="author flex items-center -ml-3 my-3">
        <h2 class="text-sm tracking-tighter text-gray-900">
           <span class="text-gray-600"> By <%= post.user.username %> <%= post.created_at %>.</span>
        </h2>
      </div>
    </div>
  </div>
</div>