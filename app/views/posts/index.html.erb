<%= link_to "New Post", new_post_path %>
<% @posts.each do |post| %>
  <h3><%= post.title %></h3>
  <p><%= post.text %></p>
  <p><%= link_to  "Show post", post_path(post) %> |
    <%= link_to  "Edit post", edit_post_path(post) %> |
    <%= link_to 'Delete', post_path(post), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' }  %></p>
  <hr>
<% end %>