<div class="my- mr-2 ml-2 mt-2 flex items-center justify-between py-3 bg-green-200 rounded-lg">
  <div class="ml-2 flex space-x-5">
    <%= link_to "Posts", posts_path, class: "mb-1 text-xl font-bold duration-300 hover:scale-105 hover:border-b-4 border-green-400" %>
  </div>
  <div>
    <% if user_signed_in? %>
      <span class="rounded-3xl border-2 bg-green-500 p-2 font-bold text-white  shadow-xl shadow-green-500/50"><%= current_user.username%></span>

      <%= link_to "Edit Profile", edit_user_registration_path, class: "rounded-3xl border-2 bg-green-500 p-2 font-bold text-white  shadow-xl shadow-green-500/50" %>
      <%= link_to "Sign out", destroy_user_session_path, data: {'turbo-method': :delete }, class: "rounded-3xl border-2 bg-green-500 p-2 font-bold text-white  shadow-xl shadow-green-500/50" %>

    <% else %>

      <%= link_to "Sign in", new_user_session_path, class: "rounded-3xl border-2 bg-green-500 p-2 font-bold text-white  shadow-xl shadow-green-500/50" %>
      <%= link_to "Sign up", new_user_registration_path	, class: "rounded-3xl border-2 bg-green-500 p-2 font-bold text-white  shadow-xl shadow-green-500/50" %>
    <% end %>
  </div>
</div>


